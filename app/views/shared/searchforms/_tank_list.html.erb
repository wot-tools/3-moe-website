<%= search_form_for @q, url: rUrl do |f| %>
	<%= f.search_field :name_or_shortname_cont, placeholder: "Tank name" %>
	<%= f.collection_select :vehicle_type_id_in, VehicleType.all, :id, :name, {}, { :multiple => true, :size => VehicleType.all.count} %>
	<%= f.collection_select :nation_id_in, Nation.all, :id, :name, {}, { :multiple => true, :size => Nation.all.count} %>
	<%= f.collection_select :tier_id_in, Tier.all, :id, :name, {}, { :multiple => true, :size => 6} %>
	<%= f.submit %>
<% end %>