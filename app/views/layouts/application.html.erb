<!DOCTYPE html>
<html>
  <head>
	<% if content_for?(:head) %>
		<%= yield(:head) %>
	<% end %>
    <title>
		<%= yield :title %> | 3 MoE
	</title>

	<style>
	p {
		display: block;
		margin-top: 0;
		margin-bottom: 0;
		margin-left: 0;
		margin-right: 0;
	}
	</style>
	
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
