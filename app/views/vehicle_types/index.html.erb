<% content_for :title do %>Tank types<% end %>
<%= render "shared/navigationbar" %>

<h1>Tank type Overview</h1>

<%= search_form_for @q do |f| %>
  <%= f.search_field :name_cont %>

  <%= f.submit %>
<% end %>

<div class="digg_pagination"><%= will_paginate @vehicle_types %></div>
<table>
  <thead>
    <tr>
      <th><%= sort_link(@q, :name, "Nation") %></th>
	  <th><%= sort_link(@q, :tanks_count, "Tanks") %></th>
      <th><%= sort_link(@q, :marks_count, "3 MoE") %></th>
    </tr>
  </thead>
  <tbody>
    <% @vehicle_types.each do |vehicle_type| %>
      <tr>
        <td><%= image_tag "vehicletypes/" + vehicle_type.id + ".png" %> <%= link_to vehicle_type.name, vehicle_type_path(vehicle_type.id) %></td>
		<td><%= number_with_delimiter(vehicle_type.tanks.count) %></td>
        <td><%= number_with_delimiter(vehicle_type.marks.count) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="digg_pagination"><%= will_paginate @vehicle_types %></div>

<%= render "shared/footer" %>